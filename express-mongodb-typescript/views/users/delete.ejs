<%- include('../partials/top'); -%>
    <form class="space-y-8 divide-y divide-gray-200" method="POST" action="/user/<%= user._id %>/delete">
        <div class="space-y-8 divide-y divide-gray-200">
            Are you sure you want to delete <%= user.username %>(<%= user._id %>)?
        </div>
        <div class="pt-5">
            <div class="flex justify-end">
                <a href="/users" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"> No </a>
                <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"> Yes </button>
            </div>
        </div>
    </form>
<%- include('../partials/bottom'); -%>